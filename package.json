{
    "name": "gml-support",
    "displayName": "GML Support",
    "description": "GameMaker Language Support in Visual Studio Code.",
    "version": "1.0.2",
    "publisher": "liaronce",
    "publisherName": "LiarOnce",
    "icon": "icon.png",
    "license": "SEE LICENSE IN LICENSE",
    "engines": {
        "vscode": "^1.8.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "gml-gm81",
            "aliases": ["GameMaker Language(GameMaker 8.1)", "gml-gm81"],
            "extensions": [".gml"],
            "configuration": "./language-configuration.json"
        },{
            "id": "gml-gms",
            "aliases": ["GameMaker Language(GameMaker Studio)", "gml-gms"],
            "extensions": [".gml"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "gml-gm81",
            "scopeName": "source.gml-gm81",
            "path": "./syntaxes/gml-gm81.tmLanguage.json"
        },{
            "language": "gml-gms",
			"scopeName": "source.gml-gms",
			"path": "./syntaxes/gml-gms.tmLanguage.json"
		}],
        "snippets": [
			{
				"language": "gml-gm81",
				"path": "./snippets/gml.json"
			},
            {
				"language": "gml-gms",
				"path": "./snippets/gml.json"
			}
		]
    }
}
